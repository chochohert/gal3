<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="150dp" android:background="@color/c5">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="30dp"
        android:text="시간 설정"
        android:id="@+id/set_time_bnt"
        android:layout_marginLeft="37dp"
        android:layout_marginStart="37dp"
        android:layout_above="@+id/sub_title"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="10dp"
        android:text="하루 투약 횟수 "
        android:id="@+id/sub_title"
        android:layout_centerVertical="true"
        android:layout_alignLeft="@+id/set_time_bnt"
        android:layout_alignStart="@+id/set_time_bnt" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="10dp"
        android:text="0"
        android:id="@+id/daily_freqency"
        android:layout_alignTop="@+id/sub_title"
        android:layout_toRightOf="@+id/sub_title"
        android:layout_toEndOf="@+id/sub_title"
        android:layout_marginLeft="10dp"
        />


    <LinearLayout
        android:layout_width="200dp"
        android:layout_height="120dp"
        android:orientation="vertical"
        android:background="@color/c1"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="10dp"
        android:gravity="center_vertical"
        android:id="@+id/time_zone"
        android:baselineAligned="false">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/first_time_alarm"
            android:textSize="20dp"
            android:text=""
            android:gravity="center_vertical|center" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/second_time_alarm"
            android:layout_marginTop="15dp"
            android:textSize="20dp"
            android:text=""
            android:gravity="center_vertical|center" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/third_time_alarm"
            android:layout_marginTop="15dp"
            android:textSize="20dp"
            android:text=""
            android:gravity="center_vertical|center" />
    </LinearLayout>
</RelativeLayout>